                                                    $('#catDD').on('change', function () {
                                                        var catId = this.value;
                                                        console.log(catId)
                                                        $('#subcatDD').html('');
                                                        $.ajax({
                                                            url: `http://localhost:8000/getCategoryId/${catId}`,
                                                            type: "GET",

                                                            dataType: 'json',
                                                            success: function (res) {
