<body>
    <div class="card login-form mx-auto" style="width:500px;margin-top:10%;border-radius:20px;">
        <div class="card-body">
            <h3 class="card-title text-center">Change password</h3>

            <!--Password must contain one lowercase letter, one number, and be at least 7 characters long.-->

            <div class="card-text">
                <form action="/user/reset-password/{{this.email}}" method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Your new password</label>
                        <input type="password" class="form-control form-control-sm" name="password">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Repeat password</label>
                        <input type="password" class="form-control form-control-sm" name="confirmPassword">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block submit-btn"
                        style="background-color:#F7941D !important;color:#000000;border-radius:20px;">Confirm</button>
                </form>
            </div>
        </div>
    </div>
